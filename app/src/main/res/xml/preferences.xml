            android:title="@string/label_setting_locale_title" />

    </PreferenceCategory>-->

    <PreferenceCategory android:title="@string/preferences_language_region">

        <ListPreference
            android:entries="@array/language_array"
            android:entryValues="@array/language_alias"
            android:key="@string/pref_language_key"
            android:title="@string/pref_change_language" />

        <ListPreference
            android:entries="@array/region_array"
            android:entryValues="@array/region_alias"
            android:key="@string/pref_region_key"
            android:title="@string/pref_change_region"/>

    </PreferenceCategory>


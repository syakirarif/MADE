<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/preferences_notification">

        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/key_reminder_daily"
            android:summary="@string/label_reminder_daily_summary"
            android:title="@string/label_reminder_daily_title" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/key_reminder_playing"
            android:summary="@string/label_reminder_playing_summary"
            android:title="@string/label_reminder_playing_title" />

    </PreferenceCategory>

